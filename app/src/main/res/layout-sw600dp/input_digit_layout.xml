<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="secondViewModel"
            type="com.hubwallet.customer_checkin.ui.checkinscreen.CheckInFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:orientation="vertical">



        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobile_ic"
            app:layout_constraintBottom_toTopOf="@+id/tvEnterNumberLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEnterNumberLabel"
            style="@style/textFontTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Enter Your Registered Phone Number"
            app:layout_constraintBottom_toTopOf="@+id/etphoneNumber" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/etphoneNumber"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_border"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/btOkay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.vicmikhailau.maskededittext.MaskedEditText
                    android:id="@+id/keyInput"
                    style="@style/regular_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:focusable="false"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/btOkay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:mask="@string/maskType" />

                <!--                <com.google.android.material.textfield.TextInputEditText-->
                <!--                    android:id="@+id/keyInput"-->
                <!--                    style="@style/regular_bold"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@color/transparent"-->
                <!--                    android:focusable="false"-->
                <!--                    android:text=""-->
                <!--                     android:textColor="@color/black"-->
                <!--                    app:boxStrokeWidth="0dp"-->
                <!--                    app:boxStrokeWidthFocused="0dp"-->
                <!--                    app:mask="@string/maskType" />-->
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btOkay"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="Ok"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@color/light_skyblue2"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="1"
                android:textSize="26sp" />


            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="2"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="3"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="4"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="5"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="6"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="7"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="8"
                android:textSize="26sp" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel::updateString}"
                android:text="9"
                android:textSize="26sp" />


            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="@{secondViewModel.removePin}"
                android:padding="20dp"
                android:src="@drawable/delete_ic" />

            <TextView
                style="@style/keyboardText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="@{secondViewModel.updateString}"
                android:text="0"
                android:textSize="26sp" />


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shape"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/submit1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24"


                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/submit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_shape"
                android:padding="20dp"
                android:visibility="gone" />
        </GridLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>