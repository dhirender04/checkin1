<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HubwalletCustomer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    //font

    <style name="regular_font">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="regular_semi_bold">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="regular_bold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="regular_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="hintTextColor">@color/purple_200</item>

    </style>

    <style name="textFontTitleStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>
    <style name="textFontTitleStyle2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>
    <style name="textFontSubTitleStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#6F7378</item>
    </style>

    <style name="textInputEditText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="keyboardText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#747474</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>